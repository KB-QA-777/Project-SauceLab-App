{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2019",
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/cucumber-framework",
            "@wdio/appium-service"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true,
        "strict": false,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./features/**/*.ts",
        "./stepDefinitions/**/*.ts",
        "./pages/**/*.ts",
        "./config/**/*.ts",
        "wdio.conf.bdd.ts"
    ]
}